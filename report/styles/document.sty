\DeclareCaptionFont{figfont}{\fontsize{14}{16}\selectfont}  
\captionsetup[figure]{%
	font=figfont,               % шрифт подписи
	labelfont={figfont},     % шрифт метки «Рисунок N» — полужирный + 14 pt
	labelsep=space,             % разделитель «Рисунок 1 – текст» = пробел и дефис
	justification=centering,    % центрируем подпись по ширине рисунка
	singlelinecheck=true,       % если подпись в одну строку — тоже центрировать
	belowskip=24pt,             % отступ «после» подписи = 24 pt
	aboveskip=0pt               % отступ «до» подписи = 0 pt (т. е. сразу после рисунка)
}

\DeclareCaptionFont{tabfont}{\fontsize{14}{16}\selectfont}  
\captionsetup[table]{%
	font=tabfont,               % шрифт подписи
	labelfont={tabfont},     % метка «Таблица N» — полужирная + 14 pt
	labelsep=space,             % «Таблица 1 – текст»
	justification=raggedright,  % выравниваем подпись по левому краю
	singlelinecheck=false,      % даже в одну строку остаётся слева
	aboveskip=24pt,             % отступ «до» подписи = 24 pt
	belowskip=0pt               % отступ «после» подписи = 0 pt
}

