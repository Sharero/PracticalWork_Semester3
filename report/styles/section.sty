% ----------------------------------------СТИЛЬ ДЛЯ SECTION---------------------------------------------
\titleformat{\section}[block]{
	\normalfont % обычный шрифт
	\fontsize{18}{22} % размер, отступ
	\Large % Large шрифт
	\bfseries % жирный шрифт
	\filcenter % по центру
}{
	\thesection.  % после номера стоит точка
}{1em}{
	\MakeUppercase % все буквы большие
}

\titlespacing*{\section}{0pt}{24pt}{18pt}  % отступ слева, до и после

\preto\section{\clearpage} % каждый section с новой страницы
% -----------------------------------------------------------------------------------------------------------------

% ----------------------------------------СТИЛЬ ДЛЯ SUBSECTION---------------------------------------------
\titleformat{\subsection}[block]{
	\normalfont % обычный шрифт
	\fontsize{16}{20} % размер, отступ
	\large % large шрифт
	\bfseries % жирный шрифт
	\filcenter % по центру
}{
	\thesubsection.  % после номера стоит точка
}{1em}{
	\MakeUppercase % все буквы большие
}

\titlespacing*{\subsection}{0pt}{18pt}{12pt}  % отступ слева, до и после
% ---------------------------------------------------------------------------------------------------------------------

% ----------------------------------------СТИЛЬ ДЛЯ SUBSUBSECTION---------------------------------------------
\titleformat{\subsubsection}[block]{
	\normalfont % обычный шрифт
	\fontsize{14}{18} % размер, отступ
	\bfseries % жирный шрифт
	\filcenter % по центру
}{
	\thesubsubsection. % после номера стоит точка
}{1em}{}

\titlespacing*{\subsubsection}{0pt}{12pt}{6pt}  % отступ слева, до и после
% ---------------------------------------------------------------------------------------------------------------------

